{
  "name": "inventree-card",
  "version": "0.1.0",
  "description": "Home Assistant custom card for InvenTree inventory management",
  "keywords": [
    "home-assistant",
    "homeassistant",
    "hass",
    "automation",
    "lovelace",
    "custom-cards",
    "inventree"
  ],
  "module": "dist/inventree-card.js",
  "repository": "git@github.com:benoit505/inventree-card.git",
  "author": "benoit505",
  "license": "MIT",
  "dependencies": {
    "@mdi/js": "^7.4.47",
    "@reduxjs/toolkit": "^2.7.0",
    "custom-card-helpers": "^1.9.0",
    "home-assistant-js-websocket": "^8.0.1",
    "lit": "^2.7.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-redux": "^9.2.0",
    "redux": "^5.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-decorators": "^7.25.9",
    "@babel/preset-typescript": "^7.26.0",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^28.0.1",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@rollup/plugin-replace": "^6.0.2",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.1",
    "@testing-library/jest-dom": "^5.16.5",
    "@types/jest": "^29.2.4",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/react-redux": "^7.1.34",
    "@types/node": "^18.19.50",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.79.1",
    "rollup-plugin-copy": "^3.5.0",
    "rollup-plugin-livereload": "^2.0.5",
    "rollup-plugin-serve": "^1.1.1",
    "ts-jest": "^29.0.3",
    "typescript": "^5.3.3"
  },
  "source": "src/inventree-card.ts",
  "scripts": {
    "clean": "rimraf dist/*.js dist/*.map",
    "prebuild": "npm run clean",
    "build": "rollup -c rollup.config.mjs",
    "watch": "npm run clean && rollup -c rollup.config.mjs --watch",
    "dev": "rollup -c rollup.config.dev.mjs --watch",
    "start": "npm run dev",
    "lint": "eslint src/*",
    "lint:fix": "eslint src/* --fix",
    "prepare": "npm run build",
    "typecheck": "tsc --noEmit",
    "prepare-ha": "npm run build && mkdir -p ha-dist && cp dist/inventree-card.js dist/editor.js ha-dist/",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  }
}
